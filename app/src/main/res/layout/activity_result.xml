<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:padding="20dp"
    a:orientation="vertical"
    a:gravity="center">

    <!-- Display Result -->
    <TextView
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:text="Calculation Result:"
        a:textSize="18sp"
        a:textStyle="bold"
        a:gravity="center"/>

    <TextView
        a:id="@+id/tvResult"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:textSize="20sp"
        a:textColor="#FF5722"
        a:textStyle="bold"
        a:gravity="center"
        a:layout_marginTop="10dp"/>

    <Button
        a:id="@+id/btnBack"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:text="Back"
        a:layout_marginTop="20dp"/>
</LinearLayout>
